<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/BundleApplication</base-name>
            <var>bundleApplication</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/BundleChemical</base-name>
            <var>bundleChemical</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/BundleClassification</base-name>
            <var>bundleClassification</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/BundleContract</base-name>
            <var>bundleContract</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/BundleCrop</base-name>
            <var>bundleCrop</var>
        </resource-bundle>
    </application>
    <managed-bean>
        <managed-bean-name>RiskConverter</managed-bean-name>
        <managed-bean-class>controller.converters.RiskConverter</managed-bean-class>        
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>ApplicationTypeConverter</managed-bean-name>
        <managed-bean-class>controller.converters.ApplicationTypeConverter</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>ValuationTypeConverter</managed-bean-name>
        <managed-bean-class>controller.converters.ValuationTypeConverter</managed-bean-class>        
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>ApplicationMeasurementUnitEnumConverter</managed-bean-name>
        <managed-bean-class>controller.converters.ApplicationMeasurementUnitEnumConverter</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>RoleConverter</managed-bean-name>
        <managed-bean-class>controller.converters.RoleConverter</managed-bean-class>        
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>BooleanConverter</managed-bean-name>
        <managed-bean-class>controller.converters.BooleanConverter</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
</faces-config>
